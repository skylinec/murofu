<h1>Category View</h1>

<h3>Sub-Categories</h3>
{{#each categories.children as |category|}}
  <div class="panel panel-default">
    NOT ROOT
    <div class="panel-heading">
      <h3 class="panel-title">{{#link-to 'category-view'}}{{category.name}}{{/link-to}}</h3>
    </div>
    <div class="panel-body">
      {{category.description}}
    </div>
  </div>
{{/each}}

<h3>Threads</h3>
{{#each categories.topics as |topic|}}
  <div class="panel panel-default">
    NOT ROOT
    <div class="panel-heading">
      <h3 class="panel-title">{{#link-to 'topic-view'}}{{topic.name}}{{/link-to}}</h3>
    </div>
  </div>
{{/each}}