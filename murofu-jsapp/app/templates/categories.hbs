<h1>Categories</h1>

{{#each model as |category|}}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{#link-to 'category-view' category}}{{category.name}}{{/link-to}}</h3>
    </div>
    <div class="panel-body">
      {{category.description}} --
      Parent: {{category.parent_id}}
    </div>
  </div>
{{/each}}

<div class="row">
  <div class="col-md-5"><h1>Recent Posts</h1></div>
  <div class="col-md-5"><h1>Hot Topics</h1></div>
</div>